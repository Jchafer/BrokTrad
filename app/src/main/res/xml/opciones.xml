<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:key="idioma"
        android:title="@string/idiomaAplicacion"
        android:summary="@string/idioma"
        android:dialogTitle="@string/indicarIdiomaAplicacion"
        android:entries="@array/idioma"
        android:entryValues="@array/codigoIdioma" />
    <EditTextPreference
        android:key="email"
        android:title="@string/cambiar_correo"
        android:summary="@string/introducir_correo"
        android:dialogTitle="@string/nuevo_correo" />
    <EditTextPreference
        android:key="password"
        android:title="@string/cambiar_pass"
        android:summary="@string/introducir_pass"
        android:dialogTitle="@string/nuevo_pass" />
    <EditTextPreference
        android:key="nick"
        android:title="@string/cambiar_nick"
        android:summary="@string/introducir_nick"
        android:dialogTitle="@string/nuevo_nick" />
</PreferenceScreen>